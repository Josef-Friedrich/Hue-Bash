#! /bin/bash

if [ -f /etc/hue.ini ]; then
  source /etc/hue.ini
else
  echo "hue.ini file was not found. Create hue.ini file in /etc/hue.ini."
fi

##
#
##
function help {
  echo "Commands are:
  - hue help
  - hue set all
  - hue set 1-?
  - hue get all
  - hue conf"
}

##
#
##
function call {
  if [ -n "$3" ]; then
    DATA="--data $3"
  fi

  curl --silent --request $1 $DATA http://$IP/api/$USERNAME/$2 | jq '.'
}

##
#
##
function stop {
  PIDS_FILE="/var/run/hue.pids"

  for PID in $(cat $PIDS_FILE); do
    kill $PID > /dev/null
  done

  > $PIDS_FILE
}

##
#
##
function debug {
  echo "IP: $IP"
  echo "USERNAME: $USERNAME"
}

##
#
##

case "$1" in
  help) help;;

  set)
    case "$2" in
      all)
        call PUT groups/0/action $3
      ;;

      *)
        call PUT lights/$2/state $3
    esac
    ;;

  get)
    case "$2" in
      all)
        call GET lights
        ;;
      *)
        call GET lights/$2
        ;;

    esac
    ;;

  ping)
    case "$2" in
      all)
        call PUT groups/0/action '{"alert":"select"}'
        ;;

      *)
        call PUT lights/$2/state '{"alert":"select"}'
        ;;

      esac
      ;;

  stop)
    stop
    ;;

  debug)
    debug
  ;;

  *)
    help
    ;;

esac
