#! /bin/sh

. /etc/hue-shell/hue-shell.conf

_hue_trap

# Defaults
HUE_SEQUENCE="$(_hue_range 0:65535),$(_hue_range 0:65535),$(_hue_range 0:65535),$(_hue_range 0:65535)"
SLEEP_TIME="$(_hue_range 4:8)"
TRANSITION_TIME="$(_hue_range 1:3)"
BRIGHTNESS="$(_hue_range 100:255)"

#	$1: HUE_SEQUENCE
#	$2: SLEEP_TIME
#	$3: TRANSITION_TIME
#	$4: BRIGHTNESS
_sequence() {
	HUE_SEQUENCE=$1

	OLD_IFS=$IFS; IFS=","

	for HUE in $HUE_SEQUENCE ; do
		IFS=$OLD_IFS

		_hue_set all --sat 255 --hue $HUE -t $(($3 * 10)) --bri $4
		sleep $2
	done
}

while true ; do
	case "$1" in

		-b|--brightness)
			BRIGHTNESS=$2
			shift 2
			;;

		-h|--help)
			_hue_usage $(basename $0)
			break
			;;

		-H|--huesequence)
			HUE_SEQUENCE=$2
			shift 2
			;;

		-s|--sleeptime)
			SLEEP_TIME=$2
			shift 2
			;;

		-t|--transitiontime)
			TRANSITION_TIME=$2
			shift 2
			;;

		*)
			break
			;;
	esac
done

_hue_trap
_hue_stop

while true; do
	_sequence $HUE_SEQUENCE $SLEEP_TIME $TRANSITION_TIME $BRIGHTNESS
done
# vim: set ts=8 sw=8 sts=8 et :
# sublime: tab_size 8;