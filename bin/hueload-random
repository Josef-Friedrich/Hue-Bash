#! /bin/sh

. /etc/hue-shell/hue-shell.conf

RANDOM_FILE="/etc/hue-shell/random-scenes.conf"

_edit() {
	if [ -z "$EDITOR" ]; then
		EDITOR='vi'
	fi

	"$EDITOR" "$RANDOM_FILE"
}

# Print out the contents of the random config file to standard output.
_get() {
	cat $RANDOM_FILE
}

# Send one random light scene to standard output.
_get_random() {
	LINES=$(_list | wc -l)
	RANDOM=$(_hue_range 1:"$LINES")

	_list | sed -n "$RANDOM"p
}

# List all light scenes without empty lines and comments.
_list() {
	_get | grep -v '^$' | grep -v '#'
}

_show() {
	_get
}

_execute_line_by_line() {
	COMMANDS=$(_list)

	IFS='
'
	for COMMAND in $COMMANDS; do
		IFS="$OLD_IFS"
		echo "
#####
"
		echo "$COMMAND"
		eval "$COMMAND" > /dev/null 2>&1
		sleep 10
	done
}

while true ; do
	case "$1" in

		-a|--all)
			_execute_line_by_line
			exit 0
			;;

		-D|--debug)
			DEBUG=1
			shift
			;;

		-d|--detached)
			DETACHED=1
			shift
			;;

		-e|--edit)
			_edit
			exit 0
			;;

		-h|--help)
			_hue_usage
			exit 0
			;;

		-l|--list)
			_list
			exit 0
			;;

		-s|--show)
			_show
			exit 0
			;;

		*)
			break
			;;
	esac
done

#_hue_stop
_hue_kill

RANDOM_SCENE=$(_get_random)

_hue_log 1 "$RANDOM_SCENE"

SCENE="$RANDOM_SCENE"

# if [ -z "$MASTER_PID" ]; then
# 	_hue_write_to_master_pid $$
# 	SCENE="$SCENE $$"
# else
# 	_hue_write_to_master_pid $MASTER_PID $$
# 	SCENE="$SCENE $MASTER_PID"
# fi

if [ "$DETACHED" = 1 ]; then
	#SCENE="$SCENE $MASTER_PID &"
	SCENE="$SCENE &"
fi

if [ "$TEST" = 1 ]; then
	echo $SCENE
else
	eval "$SCENE"
fi

# vim: set ts=8 sw=8 sts=8 et :
# sublime: tab_size 8;
