#! /bin/sh

. /etc/hue-shell/hue-shell.conf

RANDOM_FILE="/etc/hue-shell/random-scenes.conf"

_edit() {
	if [ -z "$EDITOR" ]; then
		EDITOR='vi'
	fi

	$EDITOR $RANDOM_FILE
}

# Print out the contents of the random config file to standard output.
_get() {
	cat $RANDOM_FILE
}

# Send one random light scene to standard output.
_get_random() {
	local LINES=$(_list | wc -l)
	local RANDOM=$(_hue_range 1:"$LINES")

	_list | sed -n "$RANDOM"p
}

# List all light scenes without empty lines and comments.
_list() {
	_get | grep -v '^$' | grep -v '#'
}

_show() {
	_get
}

_execute_line_by_line() {
	COMMANDS=$(_list)

	IFS='
'
	for COMMAND in $COMMANDS; do
		IFS="$OLD_IFS"
		echo "
#####
"
		echo "$COMMAND"
		eval "$COMMAND" > /dev/null 2>&1
		sleep 10
	done
}

while true ; do
	case "$1" in

		-a|--all)
			_execute_line_by_line
			exit 0
			;;

		-d|--debug)
			DEBUG="YES"
			shift
			;;

		-e|--edit)
			_edit
			exit 0
			;;

		-h|--help)
			_hue_usage
			exit 0
			;;

		-l|--list)
			_list
			exit 0
			;;

		-s|--show)
			_show
			exit 0
			;;

		*)
			break
			;;
	esac
done

_hue_stop

RANDOM_SCENE=$(_get_random)

if [ "$DEBUG" = "YES" ]; then
	echo $RANDOM_SCENE
fi

eval "$RANDOM_SCENE"
echo $! >> $DIR_RUN_TMP/hue-background-$PPID

# vim: set ts=8 sw=8 sts=8 et :
# sublime: tab_size 8;