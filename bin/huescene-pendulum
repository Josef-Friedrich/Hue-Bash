#! /bin/sh

. /etc/hue-shell/hue-shell.conf

_calculate_lights() {
	LIGHTS1=0
	LIGHTS2=0

	if [ -n "$ARG_LIGHTS1" ] && [ -n "$ARG_LIGHTS2" ]; then
		LIGHTS1=$ARG_LIGHTS1
		LIGHTS2=$ARG_LIGHTS2
		return
	fi

	LIGHTS=$(_hue_get_lights_reachable)

	if [ ! "$LIGHTS" = '' ]; then

		IFS=","
		COUNT=1
		for LIGHT in $LIGHTS; do
			IFS="$OLD_IFS"

			NUMBER=$(_hue_range 1:2)

			if [ "$COUNT" = 1 ]; then
				LIGHTS1="$LIGHT"
			elif [ "$COUNT" = 2 ]; then
				LIGHTS2="$LIGHT"
			elif [ "$NUMBER" = 1 ]; then
				LIGHTS1="$LIGHTS1,$LIGHT"
			else
				LIGHTS2="$LIGHTS2,$LIGHT"
			fi
			COUNT=$((COUNT + 1))
		done
	fi

}

#	$1: LIGHTS1
#	$2: LIGHTS2
#	$3: COLOR1
#	$4: COLOR2
#	$5: SWITCH_TIME
#	$6: TRANSITION_TIME
_pendulum() {
	[ "$1" = 0 ] || _hue_set $1 --hue $3 -t $6 --sat 255 --bri 255
	[ "$2" = 0 ] || _hue_set $2 --hue $4 -t $6 --sat 255 --bri 255
	sleep $5

	[ "$2" = 0 ] || _hue_set $2 --hue $3 -t $6 --sat 255 --bri 255
	[ "$1" = 0 ] || _hue_set $1 --hue $4 -t $6 --sat 255 --bri 255
	sleep $5
}

while true ; do
	case "$1" in

		-c1|--color1)
			ARG_COLOR1=$2
			shift 2
			;;

		-c2|--color2)
			ARG_COLOR2=$2
			shift 2
			;;

		-h|--help)
			_hue_usage $BASENAME
			break
			;;

		-l1|--lights1)
			ARG_LIGHTS1=$2
			shift 2
			;;

		-l2|--lights2)
			ARG_LIGHTS2=$2
			shift 2
			;;

		-m|--master-pid)
			MASTER_PID=$2
			shift 2
			;;

		-s|--switchtime)
			ARG_SWITCH_TIME=$2
			shift 2
			;;

		-t|--transitiontime)
			ARG_TRANSITION_TIME=$2
			shift 2
			;;

		*)
			break
			;;
	esac
done

# Defaults
if [ -z "$ARG_COLOR1" ]; then
	COLOR1=$(_hue_range 0:65535)
else
	COLOR1=$ARG_COLOR1
fi

if [ -z "$ARG_COLOR2" ]; then
	COLOR2=$(_hue_range 0:65535)
else
	COLOR2=$ARG_COLOR2
fi

if [ -z "$ARG_SWITCH_TIME" ]; then
	SWITCH_TIME=$(_hue_range 1:10)
else
	SWITCH_TIME=$ARG_SWITCH_TIME
fi

if [ -z "$ARG_TRANSITION_TIME" ]; then
	TRANSITION_TIME=$(_hue_range 5:50)
else
	TRANSITION_TIME=$ARG_TRANSITION_TIME
fi

_hue_trap
_hue_stop

if [ -n "$MASTER_PID" ]; then
	_hue_write_to_master_pid $MASTER_PID $$
fi

_hue_log 1 "COLOR1: ${COLOR1} \
COLOR2: ${COLOR2} \
SWITCH_TIME: ${SWITCH_TIME} \
TRANSITION_TIME: ${TRANSITION_TIME}"

while true; do
	_calculate_lights
	_hue_log 2 "LIGHTS1: $LIGHTS1 LIGHTS2: $LIGHTS2"
	_pendulum $LIGHTS1 $LIGHTS2 $COLOR1 $COLOR2 $SWITCH_TIME $TRANSITION_TIME
done

# vim: set ts=8 sw=8 sts=8 et :
# sublime: tab_size 8;