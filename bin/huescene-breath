#! /bin/sh

. /etc/hue-shell/hue-shell.conf

_usage() {
	echo "'huescene-breath' fades the lights smoothly up and down, so it seems that they were
breathing.

Usage: huescene-breath <option>

OPTIONS
	-l, --lights            Lights to use (comma seperated numbers, e. g.:
													1,2,3).
	-h, --hue-range         Two hue color values (e. g. 23461:40123)
	-t, --time-range        A time range in seconds separated by a colon.
	-b, --brightness-range
"
}

##
# Helper function for random breath scene.
#
# - $1 = LIGHT
# - $2 = HUE_RANGE
# - $3 = TIME_RANGE
# - $4 = BRI_RANGE
##
_breath() {
	local TRANSTIME=$(_hue_range $3)
	local BRI_START=${4%%:*}
	local BRI_END=${4#*:}

	_hue_set_transit $1 $TRANSTIME --hue $(_hue_range $2) --bri $BRI_END --sat 255
	_hue_set_transit $1 $TRANSTIME --bri $BRI_START
}

##
# Scene: Random breath.
##

_hue_stop

while true ; do
	case "$1" in

		-l|--lights)
			LIGHTS=$2
			shift 2
			;;

		-h|--hue-range)
			HUE_RANGE=$2
			shift 2
			;;

		-t|--time-range)
			TIME_RANGE=$2
			shift 2
			;;

		-b|--brightness-range)
			BRI_RANGE=$2
			shift 2
			;;

		*)
			break
			;;
	esac
done

#
# Default values.
#
if [ -z $LIGHTS ] && [ -n $ALL_LIGHTS ]; then
	LIGHTS=$ALL_LIGHTS
fi

if [ -z $HUE_RANGE ]; then
	HUE_RANGE='52000:58000'
fi

if [ -z $TIME_RANGE ]; then
	TIME_RANGE='2:4'
fi

if [ -z $BRI_RANGE ]; then
	BRI_RANGE='50:255'
fi

_usage

echo "Generating a lighting scene with following values:

huescene-breath -l $LIGHT -h $HUE_RANGE -t $TIME_RANGE -b $BRI_RANGE"

OLD_IFS=$IFS; IFS=","

for LIGHT in $LIGHTS ; do
	IFS=$OLD_IFS

	_hue_loop _breath $LIGHT $HUE_RANGE $TIME_RANGE $BRI_RANGE
done

# vim: set ts=8 sw=8 sts=8 et :
# sublime: tab_size 8;