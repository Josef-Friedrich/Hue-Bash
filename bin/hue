#! /bin/sh

. /etc/hue-shell/hue-shell.conf

case "$1" in

	#
	# Set
	#

	set)
		shift
		_hue_set $@
		break
		;;

	transit)
		shift
		_hue_set_transit $@
		break
		;;

	#
	# Info / debug
	#

	get)
		shift
		_hue_get $@
		break
		;;

	alert)
		shift
		_hue_alert $@
		break
		;;

	config)
		cat /etc/hue-shell/hue-shell.conf
		echo
		exit
		;;

	#
	# Stop
	#

	kill)
		_hue_kill
		break
		;;

	reset)
		_hue_reset
		break
		;;

	stop)
		_hue_stop
		break
		;;

	#
	# Help
	#

	help)
		_hue_usage $(basename $0)
		break
		;;

	*)
		_hue_usage $(basename $0)
		break
		;;

esac

# vim: set ts=8 sw=8 sts=8 et :
# sublime: tab_size 8;