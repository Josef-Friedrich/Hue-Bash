#! /bin/sh

. /etc/hue-shell/hue-shell.conf

case "$1" in

	# Set

	set)
		shift
		_hue_set $@
		break
		;;

	transit)
		shift
		_hue_set_transit $@
		break
		;;

	# Info

	alert)
		shift
		_hue_alert $@
		break
		;;

	config)
		cat /etc/hue-shell/hue-shell.conf
		echo
		exit
		;;

	get)
		shift
		_hue_get $@
		break
		;;

	help)
		_hue_usage
		break
		;;

	log)
		tail -f $FILE_LOG
		break
		;;

	ps)
		ps w | grep hue | grep -v grep
		break
		;;

	# Stop

	kill)
		_hue_kill
		break
		;;

	reset)
		_hue_reset
		break
		;;

	stop)
		_hue_stop
		break
		;;

	*)
		_hue_usage
		break
		;;

esac

# vim: set ts=8 sw=8 sts=8 et :
# sublime: tab_size 8;