#! /bin/sh

. /etc/hue-shell/hue-shell.conf

##
# Print out a short help text.
##
_usage() {
	echo 'Usage: hue <command>

Set commands:
	- set <lights> <attributes>
	- transit <lights> <attributes>

Info / debug commands:
	- get <lights>
	- alert <lights>
	- config
	- help

Stop commands:
	- reset
	- stop
	- kill
'
}


case "$1" in

	#
	# Set
	#

	set)
		shift
		hue_set $@
		break
		;;

	transit)
		shift
		hue_set_transit $@
		break
		;;

	#
	# Info / debug
	#

	get)
		shift
		hue_get $@
		break
		;;

	alert)
		shift
		hue_alert $@
		break
		;;

	config)
		cat /etc/hue-shell/hue-shell.conf
		echo
		exit
		;;

	#
	# Stop
	#

	reset)
		hue_reset
		break
		;;

	stop)
		hue_stop
		break
		;;

	kill)
		hue_kill
		break
		;;

	#
	# Help
	#

	help)
		_usage
		break
		;;

	*)
		_usage
		break
		;;

esac
