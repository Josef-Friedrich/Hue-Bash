#! /bin/sh

. /etc/hue-shell/hue-shell.conf

SCENES_PATH="/etc/hue-shell/scenes"

# Show available scenes.
_info() {
	echo "Available scenes:"
	for SCENE in $(find $SCENES_PATH -name "*.scene"); do
	TOKEN=$(echo $SCENE | sed 's:.*/\(.*\).scene:\1:')
	echo " -> $TOKEN"
	done
}

# Execute a scene.
#	$1: SCENE_TOKEN
_execute() {
	SCENE="$SCENES_PATH/$1.scene"

	_hue_stop
	if [ -f "$SCENE" ]; then
		$SCENE
	else
		_info
	fi
}

case "$1" in

	-e|--execute)
		_execute $2
		;;

	-h|--help)
		_hue_usage
		;;

	-i|--info)
		_info
		;;

	-r|--reset)
		_hue_reset
		;;

	-s|--stop)
		_hue_stop
		;;

	*)
		_hue_usage
		;;

esac

# vim: set ts=8 sw=8 sts=8 et :
# sublime: tab_size 8;
