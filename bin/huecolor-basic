#! /bin/sh

. /etc/hue-shell/hue-shell.conf

_usage() {
	echo "USAGE
huecolor-basic <option> or <hue-color-value>

OPTIONS
	-b, --blue     All lights shine blue.

	-c, --cyan     All lights shine cyan.

	-g, --green    All lights shine green.

	-h, --help     Show this help message.

	-r, --red      All lights shine red.

	-w, --white    All lights shine white.

	-y, --yellow   All lights shine yellow.

DESCRIPTION
	If you use the 'huecolor-basic' command, all lights will shine
	in the same color. Either use the options for predefined colors
	or use hue color values (0-65535) directly.

EXAMPLES
	huecolor-basic -b
	huecolor-basic --green
	huecolor-basic 65535
"
}

##
# Scene: One color.
#
# - $1 = HUE
##
_all() {
	_hue_stop
	_hue_set all --hue $1 --sat 255 --bri 255
}

_hue_stop

while true ; do
	case "$1" in
		-b|--blue)
			_all 46920
			break
		;;

		-c|--cyan)
			_all 56100
			break
		;;

		-g|--green)
			_all 25500
			break
		;;

		-h|--help)
			_usage
			break
		;;

		-r|--red)
			_all 0
			break
		;;

		-w|--white)
			_all 36210
			break
		;;

		-y|--yellow)
			_all 12750
			break
		;;

		*)
			if [ -n "$1" ]; then
				_all $1
			else
				_usage
			fi
			break
		;;

	esac
done

# vim: set ts=8 sw=8 sts=8 et :
# sublime: tab_size 8;