#! /bin/sh

. /etc/hue-shell/hue-shell.conf

# 	$1: HUE
_all() {
	_hue_stop
	_hue_set all --hue "$1" --sat 255 --bri 255
	exit 0
}

while true ; do
	case "$1" in
		-b|--blue)
			_all 46920
			;;

		-c|--cyan)
			_all 56100
			;;

		-g|--green)
			_all 25500
			;;

		-h|--help)
			_hue_usage
			;;

		-r|--red)
			_all 0
			;;

		-w|--white)
			_all 36210
			;;

		-y|--yellow)
			_all 12750
			;;

		*)
			if [ -n "$1" ]; then
				_all "$1"
			else
				_hue_usage error
			fi
			;;

	esac
done

# vim: set ts=8 sw=8 sts=8 et :
# sublime: tab_size 8;
