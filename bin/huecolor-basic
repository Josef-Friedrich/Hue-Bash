#! /bin/sh

# shellcheck disable=SC1091
. /etc/hue-shell/hue-shell.conf

# 	$1: HUE
_all() {
	_hue_stop

	# shellcheck disable=SC2046
	_hue_set all $(_hue_color "$(echo "$1" | sed 's/^..//g')") --sat 255 --bri 255
	exit 0
}

while true ; do
	case "$1" in
		-b)
			_all --blue
			;;

		-c)
			_all --cyan
			;;

		-g)
			_all --green
			;;

		-h|--help)
			_hue_usage
			;;

		-r)
			_all --red
			;;

		-w)
			_all --white
			;;

		-y)
			_all --yellow
			;;

		--*)
			_all "$1"
			;;

		*)
			_hue_usage error
			;;

	esac
done

# vim: set ts=8 sw=8 sts=8 et :
# sublime: tab_size 8;
