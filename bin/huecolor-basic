#! /bin/sh

. /etc/hue-shell/hue-shell.conf

_usage() {
  echo 'DESCRIPTION

USAGE
  huecolor-basic <option>

OPTIONS
	-b, --blue
	-c, --cyan
	-g, --green
	-r, --red
	-w, --white
	-y, --yellow
'
}

##
# Scene: One color.
#
# - $1 = HUE
##
_all() {
  _hue_stop
  _hue_set all --hue $1 --sat 255 --bri 255
}

_hue_stop

while true ; do
  case "$1" in
    -b|--blue)
      _all 46920
    break
    ;;

    -c|--cyan)
      _all 56100
    break
    ;;

    -g|--green)
      _all 25500
    break
    ;;

    -r|--red)
      _all 0
    break
    ;;

    -w|--white)
      _all 36210
    break
    ;;

    -y|--yellow)
      _all 12750
    break
    ;;

    *)
      if [ -n "$1" ]; then
        _all $1
      else
        _usage
      fi

    break
    ;;

  esac
done
