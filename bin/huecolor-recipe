#! /bin/sh

. /etc/hue-shell/hue-shell.conf

_hue_stop

while true ; do
	case "$1" in

		-c|--concentrate)
			_hue_set all --ct 233 --bri 219
			break
			;;

		-d|--default)
			_hue_set all --ct 369 --bri 254
			break
			;;

		-e|--energize)
			_hue_set all --ct 156 --bri 203
			break
			;;

		-h|--help)
			_hue_usage $(basename $0)
			break
			;;

		-R|--reading)
			_hue_set all --ct 346 --bri 240
			break
			;;

		-r|--relax)
			_hue_set all --ct 443 --bri 173
			break
			;;

		*)
			break
			;;

	esac
done

# vim: set ts=8 sw=8 sts=8 et :
# sublime: tab_size 8;