#! /bin/sh

. /etc/hue-shell/hue-shell.conf

_recipe() {
	_hue_stop
	_hue_set all "$@"
	exit 0
}

while true ; do
	case "$1" in

		-c|--concentrate)
			_recipe --ct 233 --bri 219
			;;

		-d|--default)
			_recipe --ct 369 --bri 254
			;;

		-e|--energize)
			_recipe --ct 156 --bri 203
			;;

		-h|--help)
			_hue_usage
			;;

		-R|--reading)
			_recipe --ct 346 --bri 240
			;;

		-r|--relax)
			_recipe --ct 443 --bri 173
			;;

		*)
			_hue_usage
			;;

	esac
done

# vim: set ts=8 sw=8 sts=8 et :
# sublime: tab_size 8;
