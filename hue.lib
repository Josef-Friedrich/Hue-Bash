#! /bin/bash

function loop {
  (
    while true; do
      eval "$*"
    done
  ) &
  echo $! >> /var/run/hue.pids
}

function range {
  START=$1
  END=$2

  END=$((END + 1))

  RANGE=$((END - START))

  # $RANDOM is a number between 0 and 32767
  BIG_RANDOM=$((RANDOM * 4 + RANDOM % 4))

  NUMBER_IN_RANGE=$((BIG_RANDOM % RANGE))

  echo $((NUMBER_IN_RANGE + START))
}

